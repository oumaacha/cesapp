@model Operateur
@{
	ViewData["Title"] = "Ajouter un opérateur";
}
<div class="card">
    <div class="card-header">
        <h5 class="text-muted">Ajouter un opérateur</h5>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Operateur" asp-action="Create">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label class="form-label">Nom et Prénom</label>
                <span class="text-danger small" asp-validation-for="OperateurName"></span>
                <input asp-for="OperateurName" class="form-control">
            </div>
            <div class="mb-3">
                <label class="form-label">Numéro de téléphone</label>
                <span class="text-danger small" asp-validation-for="OperateurPhone"></span>
                <input type="text" asp-for="OperateurPhone" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary mt-3">Ajouter</button>
            <a asp-controller="Operateur" asp-action="Index" class="btn btn-secondary mt-3">Annuler</a>
        </form>
    </div>
</div>
