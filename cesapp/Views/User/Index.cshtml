@model IEnumerable<User>
@{
	ViewData["Title"] = "Utilisateurs";
}
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="text-muted">Les utilisateurs</h5>
        <a asp-controller="User" asp-action="Create" class="btn btn-primary">Ajouter un utilisateur</a>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Prénom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Dernière connexion</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>
                            @if (user.Role.RoleName == "Admin")
                            {
                                <span class="badge rounded-pill bg-success">@user.Role.RoleName</span>
                            }
                            else
                            {
                                <span class="badge rounded-pill bg-info">@user.Role.RoleName</span>
                            }
                        </td>
                        <td>@user.LastConnection</td>
                        <td>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-sm btn-danger">Supprimer</a>
                        </td>
                    </tr> 
                }
            </tbody>
        </table>
    </div>
</div>
